<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.ui.search.ChooseGenreFragment">

    <TextView
        android:id="@+id/textTitle"
        style="@style/TextSearchTitle"
        android:text="@string/information_summary_screen"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textSummaryInfoContents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.Medium"
        app:layout_constraintTop_toBottomOf="@id/textTitle"
        android:layout_marginHorizontal="@dimen/textMarginHorizontalDefault"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/textMarginTopDefault"
        tools:text="- 입력한 검색어 : \n- 선택한 장르 : \n- 선택한 국가 : " />

    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/buttonHeightDefault"
        android:text="@string/search_for_movies"
        android:gravity="center"
        android:textAppearance="@android:style/TextAppearance.Large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>